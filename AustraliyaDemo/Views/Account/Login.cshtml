@model AustraliyaDemo.Models.Usermodel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .login{
            padding:25px;
            box-shadow:0px 0px 8px grey;
            border-radius:5px;
            margin-top: 50px;
        }
        .login a{
            text-decoration:none;
            font-size:13px;
            /*color:lightblue;*/
            margin-left:30px;
        }
        .box
        {
            margin-top:5px;
            margin-bottom:20px;
        }
        .btn{
            margin-top:15px;
        }
        #msg{
            text-align:center;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-evenly">
            <div class="col-sm-4"></div>
            <div class="col-sm-4 login">
                @if (ViewBag.msg != null)
                {
                    <div id="msg" class="text-danger">@ViewBag.msg</div>
                }
                <form method="post">
                    <h2 class="text-center text-primary">Login Here</h2>
                    <small id="uemail"></small>
                    <input type="email"  id="emailid" class="form-control box" asp-for="EmailId" placeholder="Enter Your Email Id" />
                    <small id="upas"></small>
                    <input type="password" id="password" class="form-control" asp-for="UserPassword" placeholder="Enter Your Password" />
                   @* <a class="text-end" asp-controller="Account" asp-action="ForgetPassword">Forget Password</a>*@
                    <input type="submit" class="btn btn-primary form-control" id="btn" value="Login" />
                    <a asp-controller="Account"  asp-action="Register">Register Here</a>
                </form>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
    <script src="~/wwwroot/lib/jquery/dist/jquery.js"></script>
    <script>
        $(document).ready(function () {
            $("#btn").click(function () {
                var email = $("#emailid").val();
                var pass = $("#password").val();
                if (email == "") {
                    $("#uemail").text("Required*");
                    $("#uemail").css("color", "Red");
                    setTimeout(function () { $("#uemail").hide(); }, 5000);
                    e.preventDefault();
                    return false;
                    //alert("OKK");
                }
                if (pass == "") {
                    $("#upas").text("Required*");
                    $("#upas").css("color", "Red");
                    setTimeout(function () { $("#upas").hide(); }, 5000);
                    e.preventDefault();
                    return false;
                }
                setTimeout(function () { $("#msg").hide(); }, 5000);
            });
           
        })
    </script>
</body>
</html>
